{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": "off",
    "eol-last": "off",
    "padded-blocks": "off",
    "no-trailing-spaces": "off",
    "arrow-parens": ["error", "as-needed"],
    "semi": ["warn", "always"],
    "no-return-assign":"off",
    "no-unused-vars": "warn",
    "no-param-reassign": ["error", { "props": false }],
    "no-plusplus": "off"
  }
}